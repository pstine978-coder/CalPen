{
  "servers": [
    {
      "name": "Nmap Scanner",
      "params": {
        "command": "npx",
        "args": [
          "-y",
          "gc-nmap-mcp"
        ],
        "env": {
          "NMAP_PATH": "/usr/bin/nmap"
        }
      },
      "cache_tools_list": true
    },
    {
      "name": "Hydra",
      "params": {
        "command": "npx",
        "args": [
          "-y",
          "gc-hydra-mcp"
        ],
        "env": {
          "HYDRA_PATH": "/usr/bin/hydra"
        }
      },
      "cache_tools_list": true
    },
    {
      "name": "SQLMap",
      "params": {
        "command": "npx",
        "args": [
          "-y",
          "gc-sqlmap-mcp"
        ],
        "env": {
          "SQLMAP_PATH": "/usr/bin/sqlmap"
        }
      },
      "cache_tools_list": true
    },
    {
      "name": "FFUF Fuzzer",
      "params": {
        "command": "npx",
        "args": [

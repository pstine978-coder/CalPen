      },
      "cache_tools_list": true
    },
    {
      "name": "Hashcat",
      "params": {
        "command": "npx",
        "args": [
          "-y",
          "gc-hashcat-mcp"
        ],
        "env": {
          "HASHCAT_PATH": "/usr/bin/hashcat"
